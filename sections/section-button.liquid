

<style type="text/css">
  #section-{{ section.id }}{
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
  #section-{{ section.id }} .heading{
    margin-bottom: 42px;
    font-size: 30px !important;
    padding-bottom: 0 !important;
    font-weight: 400 !important;
    letter-spacing: 0 !important;
  }
</style>
{% schema %}
{
  "name": "Section Button",
  "settings":[
    {
      "type": "text",
      "id": "padding",
      "label": "Section Padding",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "margin",
      "label": "Section margin",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "text",
      "id": "padding_mobi",
      "label": "Section Padding",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "margin_mobi",
      "label": "Section margin",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Button"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text Button",
          "default": "Button"
        },
        {
          "type": "text",
          "id": "padding",
          "label": "padding",
          "default": "13px 32px"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#303030"
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#303030"
        },
        {
          "type": "header",
          "content": "Color Hover"
        },
        {
          "type": "color",
          "id": "bg_color_hv",
          "label": "Background",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "text_color_hv",
          "label": "Text Color",
          "default": "#303030"
        },
        {
          "type": "color",
          "id": "border_color_hv",
          "label": "Border Color",
          "default": "#303030"
        }
      ]
    }
  ]
}
{% endschema %}