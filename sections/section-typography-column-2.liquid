{
  "name": "Columns 1",
  "settings": [
    {
      "type": "text",
      "id": "margin",
      "label": "Margin",
      "default": "0 0 0 0"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "Padding",
      "default": "0 0 0 0"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "text",
      "id": "margin_mobile",
      "label": "Margin",
      "default": "0 0 0 0"
    },
    {
      "type": "text",
      "id": "padding_mobile",
      "label": "Padding",
      "default": "0 0 0 0"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#373737"
    },
    {
      "type": "color",
      "id": "color",
      "label": "text",
      "default": "#777"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "headding"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text 1",
      "default": "Nunc vulputate consectetur ipsum"
    },
    {
      "type": "textarea",
      "id": "text1",
