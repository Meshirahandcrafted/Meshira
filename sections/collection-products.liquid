<div class="bixbang-products-wrapper" style="max-width: 1200px; margin: 0 auto; padding: 20px;">
  <div class="grid grid--uniform">
    {% for product in collection.products %}
      <div class="grid__item medium-up--one-third large-up--one-quarter" style="margin-bottom: 30px; padding: 10px;">
        <div class="product-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" style="width: 100%; border-radius: 8px;" />
            <h3 style="font-size: 16px; margin-top: 10px;">{{ product.title }}</h3>
            <p style="color: #888;">{{ product.price | money }}</p>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
